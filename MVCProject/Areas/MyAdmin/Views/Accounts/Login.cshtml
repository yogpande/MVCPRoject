
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/paper-dashboard.css" rel="stylesheet" />
    <style>
        hr{
            border:1px solid black;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="main-panel1">
            <div class="content">
                <div class="container-fluid12">                   
                    <div class="card12 card-map">
                        <div class="header">
                            <h3 class="well text-center">
                                MVC PROJECT
                            </h3>
                        </div>
                        <div class="map1">                           
                           <h4 class="text-center">Login Here</h4>
                            <hr/>
                            <form action="#" method="post">
                                <div class="form-group">
                                    <label for="email">Email address:</label>
                                    <input type="email" class="form-control border-input" id="email">
                                </div>
                                <div class="form-group">
                                    <label for="pwd">Password:</label>
                                    <input type="password" class="form-control border-input" id="pwd">
                                </div>
                               
                                <button type="submit" class="btn btn-success btn-fill btn-wd">Submit</button>
                                <button type="reset" class="btn btn-default btn-fill btn-wd">Cancel</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
       </div>
    </div>
       
</body>
</html>
